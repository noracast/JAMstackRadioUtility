{
  "name": "Heavybit extension for English learners",
  "short_name": "Heavybit extension",
  "version": "1.1.2",
  "manifest_version": 2,
  "description": "Heavybit Podcastsのページを英語学習用に使いやすくします",
  "content_scripts": [{
    "run_at" : "document_start",
    "matches": ["https://www.heavybit.com/library/podcasts/*/ep-*"],
    "js": ["content.js"]
  }]
}